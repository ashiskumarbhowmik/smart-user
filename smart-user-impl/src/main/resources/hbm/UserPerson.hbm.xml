<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="com.smartitengineering.user.domain.UserPerson"
        table="userperson"
        dynamic-update="false"
        dynamic-insert="false"
     >
        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class = "increment">
            </generator>
        </id>
        
        <version name="version" column="version" />
        
        <many-to-one name="user" cascade="save-update" column="user_id" unique="true" lazy="false"/>
        <many-to-one name="person" cascade="save-update" column="person_id" unique="true" lazy="false"/>
        
    </class>
</hibernate-mapping>
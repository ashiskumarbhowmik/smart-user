<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:sec="http://www.springframework.org/schema/security"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.4.xsd">        
    <sec:http auto-config="true" access-decision-manager-ref = "accessDecisionManager">
        <sec:intercept-url method="GET" pattern='/**/*' access="ACL_READ" />
        <sec:intercept-url method="POST" pattern='/**/*' access="ACL_EDIT"/>
        <sec:intercept-url method="DELETE" pattern='/**/*' access="ACL_DELETE"/>
        <sec:intercept-url method="PUT" pattern='/**/*'  access="ACL_ADMIN"/>
        <sec:http-basic />
    </sec:http>
    <bean id="accessDecisionManager" class="com.smartitengineering.user.security.SmartAccessDecisionManager">
        <property name="allowIfAllAbstainDecisions" value="true"/>
        <property name="decisionVoters">
            <list>
                <bean id="roleVoter" class="org.springframework.security.vote.RoleVoter"/>
            </list>
        </property>
    </bean>
    <bean name="userDetailsService" class="com.smartitengineering.user.security.UserDetailsServiceImpl">
        <property name="userService">
            <ref bean = "userService"/>
        </property>

    </bean>
    <sec:authentication-provider user-service-ref = "userDetailsService"/>  

</beans>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
    <bean id="propertyConfigurer" class="com.smartitengineering.util.spring.PropertiesLocatorConfigurer">
        <property name="smartLocations">
            <list>
                <value>connection.properties</value>
            </list>
        </property>
    </bean>
    <bean id="connectionConfig" class="com.smartitengineering.user.rest.client.ConnectionConfig">
        <property name="basicUrl">
            <value>${url}</value>
        </property>
        <property name="port">
            <value>${port}</value>
        </property>
        <property name="contextPath">
            <value>${warname}</value>
        </property>
    </bean>
    <bean id="beanRegistrar" class="com.smartitengineering.util.spring.BeanFactoryRegistrar">
        <property name="beanFactoryContextName">
            <value>userRestClientContext</value>
        </property>
    </bean>
</beans>

<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="com.smartitengineering.user.domain.Role"
        table="role"
        dynamic-update="false"
        dynamic-insert="false"
     >
        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class = "increment">
            </generator>
        </id>
        <version name="version" column="version" />
        <property
            name="name"
            column="name"
            unique="true"
            type="java.lang.String"
            length="255"
        />
	<property
            name="displayName"
            column="display_name"
            type="java.lang.String"
            length="255"
        />
        <property
            name="shortDescription"
            column="short_description"
            type="java.lang.String"
            length="255"
        />
        
        <set name="privileges" lazy="false" outer-join="true" cascade="none" table="role_privilege" inverse="false">
            <key column="role_id" />
            <many-to-many class="com.smartitengineering.user.domain.Privilege" column="privilege_id" lazy="false" outer-join="true" />
        </set>
	
    </class>
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="com.smartitengineering.user.domain.Person"               
               table="person"
               dynamic-update="false"
               dynamic-insert="false">
        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class = "increment">
            </generator>
        </id>
        <version name="version" column="version" />
        <many-to-one name="self" cascade="all" column="self_id" lazy="false" />
        <many-to-one name="father" cascade="all" column="father_id" lazy="false" />
        <many-to-one name="mother" cascade="all" column="mother_id" lazy="false" />
        <many-to-one name="spouse" cascade="all" column="spouse_id" lazy="false" />
        <component name="address">
            <property
                    name="streetAddress"
                    column="street_address"
                    type="java.lang.String"
                    length="255"
                />
            <property
                    name="city"
                    column="city"
                    type="java.lang.String"
                    length="255"
                />
            <property
                    name="state"
                    column="state"
                    type="java.lang.String"
                    length="255"
                />
            <property
                    name="country"
                    column="country"
                    type="java.lang.String"
                    length="255"
                />
            <property
                    name="zip"
                    column="zip"
                    type="java.lang.String"
                    length="255"
                />
        </component>
        <property
                name="primaryEmail"
                column="primary_email"
                unique="true"
                type="java.lang.String"
                length="255"
            />
        <property
                name="birthDay"
                column="birth_day"
                type="java.util.Date"
            />
        <property
                name="secondaryEmail"
                column="secondary_email"
                type="java.lang.String"
                length="255"
            />
        <property
                name="phoneNumber"
                column="phone_number"
                type="java.lang.String"
                length="255"
            />
        <property
                name="cellPhoneNumber"
                column="cell_phone_number"
                type="java.lang.String"
                length="255"
            />
        <property
                name="faxNumber"
                column="fax_number"
                type="java.lang.String"
                length="255"
            />
    </class>
</hibernate-mapping>
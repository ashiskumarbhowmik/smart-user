<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="com.smartitengineering.user.domain.BasicIdentity"
        table="basic_identity"
        dynamic-update="false"
        dynamic-insert="false"
        
    >
        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class = "increment">
            </generator>
        </id>
        <version name="version" column="version" />
        <property
            name="nationalID"
            column="national_id"
            unique="true"
            type="java.lang.String"
            length="255"
        />
        <component name="name">
            <property
                name="firstName"
                column="first_name"
                type="java.lang.String"
                length="255"
            />
            <property
                name="lastName"
                column="last_name"
                type="java.lang.String"
                length="255"
            />
            <property
                name="middleInitial"
                column="middle_initial"
                type="java.lang.String"
                length="255"
            />
        </component>
    </class>
</hibernate-mapping>
